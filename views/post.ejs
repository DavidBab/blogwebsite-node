<%- include('partials/header.ejs') %>
<main>
	<div class="form-container">
		<form action="/post/submit" method="post">
			<label for="title">Header</label>
			<input
				type="text"
				name="title"
				placeholder="Enter your header"
				required
			/>
			<label for="description">Description</label>
			<input
				type="text"
				name="description"
				placeholder="Enter a description"
				maxlength="100"
				required
			/>
			<textarea
				name="text"
				id="text"
				placeholder="Write your post text here"
				maxlength="1000"
				required
			></textarea>
			<label for="image">Image Address</label>
			<input
				type="text"
				name="image"
				placeholder="Provide an Image Address of a picture"
			/>
			<button type="submit">Submit</button>
		</form>
	</div>
</main>
<%- include('partials/footer.ejs') %>
